---
layout: base.njk
---
<div class="layout layout__justify-content-center row">
    <div class="column column-60">
        <h1 class="text-center">Portfolio</h1>
        <p><a href="/">Back to home</a><p>
        {%- for section in portfolio -%}
            <h2>{{ section.name }}</h2>
            <section>
                <ul>
                    {%- for item in section.items -%}
                        {% if item.link %}
                            <li><a href="{{ item.link }}" target="_blank" rel="noopener noreferrer">{{ item.text }}</a></li>
                        {% else %}
                            <li>{{item.text}}</li>
                        {% endif %}
                    {%- endfor -%}
                <ul>
            </section>
        {%- endfor -%}


        <p>
            Get in touch: <a href="mailto:alex@webnicol.fr">
                alex@webnicol.fr
            </a>
            <a class="logo-link invert-when-dark" href="https://github.com/alexandrenicol" target="_blank"
                rel="noopener noreferrer">
                <img src="/img/GitHub-Mark-64px.png" alt="github logo" />
            </a>
            <a class="logo-link" href="https://www.linkedin.com/in/alexnicol/" target="_blank"
                rel="noopener noreferrer">
                <img src="/img/LI-In-Bug.png" alt="linkedin logo" />
            </a>
        </p>
    </div>
</div>
